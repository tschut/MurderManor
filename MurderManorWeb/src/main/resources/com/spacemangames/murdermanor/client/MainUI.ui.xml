<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:com.github.gwtbootstrap.client.ui">
	<ui:style>
	.italic {
		font-style: italic;
	}
	</ui:style>

	<g:VerticalPanel>
		<b:Row>
			<b:Column size="12">
				<b:Well>
					<g:HTML ui:field="storyPanel"></g:HTML>
				</b:Well>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="12">
				<b:Well>
					<g:HTML ui:field="feedbackPanelLastCommand" addStyleNames="{style.italic}"></g:HTML>
					<g:HTML ui:field="feedbackPanel"></g:HTML>
				</b:Well>
			</b:Column>
		</b:Row>
		<b:Row>
			<b:Column size="10">
				<b:TextBox ui:field="inputTextBox" placeholder="Enter command"
					width="100%"></b:TextBox>
			</b:Column>
			<b:Column size="2">
				<b:Button ui:field="submitButton" block="true">Submit</b:Button>
			</b:Column>
		</b:Row>
	</g:VerticalPanel>

</ui:UiBinder> 